<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_delivery_carrier_file_form_chronopost" model="ir.ui.view">
            <field name="name">delivery.carrier.file.form.chronopost</field>
            <field name="model">delivery.carrier.file</field>
            <field name="inherit_id" ref="base_delivery_carrier_files.view_delivery_carrier_file_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <form position="inside">
                        <group colspan="4" col="4" attrs="{'invisible': [('type', '!=', 'chronopost')]}">
                            <separator string="Chronopost Options" colspan="4"/>
                            <field name="subaccount_number"/>
                            <field name="chronopost_code"/>
                            <field name="saturday_delivery_code"/>
                            <field name="chronopost_insurance"/>
                        </group>
                    </form>
                </data>
            </field>
        </record>
    </data>
</openerp>
