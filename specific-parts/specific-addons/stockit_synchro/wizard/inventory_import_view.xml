<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stockit_import_inventory_view" model="ir.ui.view">
             <field name="name">Inventory Import for Stock iT</field>
             <field name="model">stockit.import.inventory</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Inventory Import for Stock iT" version="7.0">
                    <group>
                        <field name="data" filename="filename" />
                    </group>
                    <footer>
                        <button name="action_import" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>

        <record id="action_stockit_import_inventory" model="ir.actions.act_window">
             <field name="name">Inventory Import for Stock iT</field>
             <field name="res_model">stockit.import.inventory</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="stockit_import_inventory_view"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>

    </data>
</openerp>
