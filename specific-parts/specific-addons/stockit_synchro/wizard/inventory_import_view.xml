<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stockit_import_inventory_view" model="ir.ui.view">
             <field name="name">Inventory Import for Stock iT</field>
             <field name="model">stockit.import.inventory</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Ingoing Pickings Export for Stock iT">
                    <field name="data" filename="filename" />
                    <field name="filename" colspan="2"/>
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                         <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="action_import" string="Import" type="object" icon="gtk-execute"/>
                     </group>
                </form>
             </field>
         </record>

        <record id="action_stockit_import_inventory" model="ir.actions.act_window">
             <field name="name">Inventory Import for Stock iT</field>
             <field name="res_model">stockit.import.inventory</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="stockit_import_inventory_view"/>
             <field name="context">{'record_id':active_id}</field>
             <field name="target">new</field>
       </record>

    </data>
</openerp>
