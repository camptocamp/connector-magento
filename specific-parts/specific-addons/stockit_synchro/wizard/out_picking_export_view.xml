<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stockit_export_out_picking_view" model="ir.ui.view">
             <field name="name">Outgoing Pickings Export for Stock iT</field>
             <field name="model">stockit.export.out.picking</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Outgoing Pickings Export for Stock iT">
                    <group colspan="4" >
                        <field name="data"/>
                    </group>
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                         <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="action_manual_export" string="Export" type="object" icon="gtk-execute"/>
                     </group>
                </form>
             </field>
         </record>

        <record id="action_stockit_export_out_picking" model="ir.actions.act_window">
             <field name="name">Outgoing Pickings Export for Stock iT</field>
             <field name="res_model">stockit.export.out.picking</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="stockit_export_out_picking_view"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>


        <record id="stockit_manual_export_out_picking_view" model="ir.ui.view">
            <field name="name">stockit.manual.export.out.picking</field>
            <field name="model">stockit.manual.export.out.picking</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export delivery orders">
                    <separator string="Export selected picking to stockit. File will be automatically put in stockit folder" colspan="4"/>
                    <newline/>
                    <field name="only_new"/>
                    <newline/>
                    <field name="picking_ids" nolabel="1" colspan="4">
                        <tree string="Delivery Orders">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="origin"/>
                        </tree>
                    </field>
                    <field name="data"/>
                    <separator colspan="4"/>
                    <group col="3" colspan="4">
                        <button special="cancel" colspan="1" string="Cancel" icon='gtk-cancel'/>
                        <button name="export" string="Generate Files" type="object" icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_stockit_manual_export_out_picking" model="ir.actions.act_window">
            <field name="name">Export selected picking to stockit</field>
            <field name="res_model">stockit.manual.export.out.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stockit_manual_export_out_picking_view"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="stockit_manual_export_out_picking_ir_values">
            <field name="object" eval="1" />
            <field name="name">Export selected picking to stockit</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_stockit_manual_export_out_picking'))" />
            <field name="key">action</field>
            <field name="model">stock.picking</field>
        </record>
    </data>
</openerp>
