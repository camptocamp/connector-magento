<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stockit_export_product_view" model="ir.ui.view">
             <field name="name">Product Export for Stock iT</field>
             <field name="model">stockit.export.product</field>
             <field name="arch" type="xml">
                <form string="Product Export for Stock iT" version="7.0">
                    <field name="state" invisible="1"/>
                    <group attrs="{'invisible': [('state', '=', 'done')]}">
                        <field name="data"/>
                    </group>
                    <footer>
                        <button name="action_manual_export" string="Export" type="object"  default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>

        <record id="action_stockit_export_product" model="ir.actions.act_window">
             <field name="name">Product Export for Stock iT</field>
             <field name="res_model">stockit.export.product</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="stockit_export_product_view"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>

    </data>
</openerp>
