<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stockit_export_product_view" model="ir.ui.view">
             <field name="name">Product Export for Stock iT</field>
             <field name="model">stockit.export.product</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Product Export for Stock iT">
                    <group colspan="4" >
                        <field name="data"/>
                    </group>
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                         <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="action_manual_export" string="Export" type="object" icon="gtk-execute"/>
                     </group>
                </form>
             </field>
         </record>

        <record id="action_stockit_export_product" model="ir.actions.act_window">
             <field name="name">Product Export for Stock iT</field>
             <field name="res_model">stockit.export.product</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="stockit_export_product_view"/>
             <field name="context">{'record_id':active_id}</field>
             <field name="target">new</field>
       </record>

    </data>
</openerp>
