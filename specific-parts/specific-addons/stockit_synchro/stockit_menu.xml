<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_stockit_pickings" model="ir.actions.act_window">
            <field name="name">Packings confirmed by Stock-it</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','stockit_confirm'),('type','=','in')]</field>
            <field name="context">{'contact_display': 'partner'}</field>
        </record>
        <record id="action_stockit_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock.view_picking_in_tree"/>
            <field name="act_window_id" ref="action_stockit_pickings"/>
        </record>
        <record id="action_stockit_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock.view_picking_in_form"/>
            <field name="act_window_id" ref="action_stockit_pickings"/>
        </record>
        <record id="action_stockit_view2_cal" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">calendar</field>
            <field name="act_window_id" ref="action_stockit_pickings"/>
        </record>
        <menuitem action="action_stockit_pickings" id="menu_action_stockit_pickings" parent="stock.menu_action_picking_tree4"/>

        <menuitem
            name="Stock-it"
            id="menu_stockit_main"
            parent="stock.menu_stock_root"
            sequence="200"
            />

        <menuitem
            name="Export"
            id="menu_stockit_export"
            parent="menu_stockit_main"
            sequence="100"
            />

        <menuitem
            name="Import"
            id="menu_stockit_import"
            parent="menu_stockit_main"
            sequence="105"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Product"
            action="action_stockit_export_product"
            id="menu_stockit_export_product"
            parent="menu_stockit_export"
            sequence="100"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Product EAN13"
            action="action_stockit_export_product_ean13"
            id="menu_stockit_export_product_ean13"
            parent="menu_stockit_export"
            sequence="105"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Outgoing Pickings"
            action="action_stockit_export_out_picking"
            id="menu_stockit_export_out_picking"
            parent="menu_stockit_export"
            sequence="110"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Incoming Pickings"
            action="action_stockit_export_in_picking"
            id="menu_stockit_export_in_picking"
            parent="menu_stockit_export"
            sequence="115"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Incoming Pickings"
            action="action_stockit_import_in_picking"
            id="menu_stockit_import_in_picking"
            parent="menu_stockit_import"
            sequence="115"
            />

        <menuitem
            icon="STOCK_EXECUTE"
            name="Inventory"
            action="action_stockit_import_inventory"
            id="menu_stockit_import_inventory"
            parent="menu_stockit_import"
            sequence="115"
            />

    </data>
</openerp>
