<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock.view_product_standard_price_form" model="ir.ui.view">
            <field name="name">product.product.standard.price.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="replace" version="7.0">
                    <label string="Standard price" for="standard_price" align="1.0" attrs="{'invisible':[('cost_method','=','average')]}"/>
                    <div groups="base.group_user" attrs="{'invisible':[('cost_method','=','average')]}" >
                        <field name="standard_price" readonly="1" nolabel="1"/>
                        <button name="%(stock.action_view_change_standard_price)d" string="- update"
                                type="action" class="oe_link" groups="product.group_costing_method"/>
                    </div>
                </field>
            </field>
        </record>

    </data>
</openerp>
