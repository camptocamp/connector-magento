<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="stock_values_export_view" model="ir.ui.view">
      <field name="name">Export Locations' Values Details</field>
      <field name="model">stock.values.detail.export</field>
      <field name="arch" type="xml">
        <form string="Export Stock Values Details" version="7.0">
          <field name="state" invisible="1"/>
          <group attrs="{'invisible': [('state', '=', 'done')]}">
            <field name="location_id"/>
            <field name="stop_date"/>
          </group>
          <group attrs="{'invisible': [('state', '!=', 'done')]}">
              <field name="data"/>
          </group>
          <footer>
              <button name="action_manual_export" string="Create file"
                type="object"  default_focus="1" class="oe_highlight"/>
              or
              <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>


    <record id="action_stock_values_export2" model="ir.actions.act_window">
      <field name="name">Export Locations' Values Details</field>
      <field name="res_model">stock.values.detail.export</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="stock_values_export_view"/>
      <field name="target">new</field>
    </record>

    <menuitem
        icon="STOCK_EXECUTE"
        name="Locations' Values Details as CSV"
        action="action_stock_values_export2"
        id="menu_stock_values_export"
        parent="stock.next_id_61"
        sequence="110"
        />

  </data>
</openerp>
