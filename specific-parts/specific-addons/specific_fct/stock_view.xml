<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_picking_out_form_specific">
            <field name="name">stock.picking.out.form.specific</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook/page[@string='General Information']/group[2]/button[@name='force_assign']" position="replace">
                        <button name="force_assign" states="confirmed" string="Force Availability" type="object" groups="stock.group_stock_manager"/>
                    </xpath>
                    <xpath expr="/form/notebook/page[@string='General Information']/field[@name='move_lines']/form[@string='Stock Moves']/group[1]/button[@name='force_assign']" position="replace">
                        <button name="force_assign" states="confirmed" string="Force Availability" type="object" groups="stock.group_stock_manager"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
