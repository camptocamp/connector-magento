<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="company_view_form">
      <field name="name">res.company.form.inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="import_tracking.company_csv_config"/>
      <field name="arch" type="xml">
        <page string="Debonix Specific Configuration" position="inside">
          <group string="Invoice SFTP">
            <field name="sftp_invoice_host"/>
            <field name="sftp_invoice_port"/>
            <field name="sftp_invoice_user"/>
            <field name="sftp_invoice_path"/>
          </group>
          <group string="EDIFACT Purchase FTP">
            <field name="edifact_purchase_host"/>
            <field name="edifact_purchase_user"/>
            <field name="edifact_purchase_password"/>
            <field name="edifact_purchase_path"/>
          </group>
          <group string="EDIFACT Email Error Regex">
            <field name="edifact_regex_ref"/>
            <field name="edifact_regex_errors"/>
          </group>
        </page>
      </field>
    </record>
  </data>
</openerp>
