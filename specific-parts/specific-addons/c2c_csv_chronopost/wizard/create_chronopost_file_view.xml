<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_create_chronopost_file" model="ir.ui.view">
            <field name="name">stock.create.chronopost.file</field>
            <field name="model">stock.create.chronopost.file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Chronopost">
                    <label string="Generate the chronopost file. It will be stored in the chronopost folder."/>
                    <separator colspan="4"/>
                    <group col="3" colspan="4">
                        <button special="cancel" colspan="1" string="Cancel" icon='gtk-cancel'/>
                        <button name="create_chronopost_file" string="Create File" type="object"
                                icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_create_chronopost_file" model="ir.actions.act_window">
            <field name="name">Create Chronopost File</field>
            <field name="res_model">stock.create.chronopost.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_create_chronopost_file"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="create_chronopost_file_ir_values">
            <field name="object" eval="1" />
            <field name="name">Create Chronopost File</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_create_chronopost_file'))" />
            <field name="key">action</field>
            <field name="model">stock.picking</field>
        </record>

    </data>
</openerp>
