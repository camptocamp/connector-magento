<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Supplier Catalog Category -->

        <record id="supplier_catalog_category_form" model="ir.ui.view">
            <field name="name">supplier.catalog.category.form</field>
            <field name="model">supplier.catalog.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Supplier Catalog Categories">
                    <field name="supplier_code"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="price_coefficient"/>
                </form>
            </field>
        </record>
        <record id="supplier_catalog_category_tree" model="ir.ui.view">
            <field name="name">supplier.catalog.category.tree</field>
            <field name="model">supplier.catalog.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Supplier Catalog Categories">
                    <field name="supplier_code" select="1"/>
                    <field name="name" select="1"/>
                    <field name="category_id" select="1"/>
                    <field name="price_coefficient" select="1"/>
                </tree>
            </field>
        </record>
        <record id="supplier_catalog_category_form_action" model="ir.actions.act_window">
            <field name="name">Supplier Catalog Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier.catalog.category</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="supplier_catalog_category_tree"/>
        </record>
        <menuitem action="supplier_catalog_category_form_action" id="menu_supplier_catalog_category" parent="product.prod_config_main"/>

        <!-- Product Category -->

        <record model="ir.ui.view" id="product_category_form_view_supplier_cat">
            <!-- must be unique in this module. -->
            <field name="name">product.category.form.supplier.cat</field>
            <field name="model">product.category</field>
            <!--parent python entity -->
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <!-- modulename.view -->
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="supplier_catalog_category_ids" colspan="4" nolabel="1"/>
                    <newline/>
                 </field>
            </field>
        </record>
    </data>
</openerp>
