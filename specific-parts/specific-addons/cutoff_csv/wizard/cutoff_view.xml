<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="cutoff_export_view" model="ir.ui.view">
      <field name="name">Cutoff for incoming/outgoing pickings</field>
      <field name="model">cutoff.report.wizard</field>
      <field name="arch" type="xml">
        <form string="Cutoff for incoming/outgoing pickings" version="7.0">
          <field name="state" invisible="1"/>
          <group attrs="{'invisible': [('state', '=', 'done')]}">
              <field name="report_type"/>
              <field name="cutoff_date"/>
          </group>
          <group attrs="{'invisible': [('state', '!=', 'done')]}">
              <field name="data"/>
          </group>
          <footer>
              <button name="action_manual_export" string="Create file"
                type="object"  default_focus="1" class="oe_highlight"/>
              or
              <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>


    <record id="action_cutoff_export" model="ir.actions.act_window">
      <field name="name">Cutoff for incoming/outgoing pickings</field>
      <field name="res_model">cutoff.report.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="cutoff_export_view"/>
      <field name="target">new</field>
    </record>

    <menuitem
        icon="STOCK_EXECUTE"
        name="Cutoff for incoming/outgoing pickings"
        action="action_cutoff_export"
        id="menu_cutoff_export"
        parent="stock.next_id_61"
        sequence="10"
        />

  </data>
</openerp>
