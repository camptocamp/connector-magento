<openerp>
    <data>
        <record model="ir.ui.view" id="company_custom">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page string="General Information" position="inside">
                    <separator string="Hide the partner name on reports for these titles" colspan="4"/>
                    <field name="report_hide_partner_title_ids" colspan="4" domain="[('domain', '=', 'partner')]" nolabel="1"/>
                </page>
            </field>
        </record>
    </data>
</openerp>

