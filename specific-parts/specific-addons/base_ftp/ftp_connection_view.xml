<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- (S)FTP Connection Tree/Form view  -->
		<record model="ir.ui.view" id="ftp_connection_form">
			<field name="name">ftp.connection.form</field>
			<field name="model">ftp.connection</field>
			<field name="type">form</field>
			<field name="priority" eval="5"/>
			<field name="arch" type="xml">
			<form string="(S)FTP Connection">
                <field name="name"/>
                <separator colspan="4"/>
                <group col="2" colspan="4" string="Remote">
                    <field name="server"/>
                    <field name="remote_cwd"/>
                    <field name="login"/>
                    <field name="password"/>
                    <field name="is_tsl"/>
                    <field name="is_ssh"/>
                </group>
                <separator colspan="4"/>
                <group col="2" colspan="4" string="Local">
                    <field name="local_cwd"/>
                </group>
			</form>
			</field>
		</record>

		<record model="ir.ui.view" id="ftp_connection_tree">
			<field name="name">ftp.connection.tree</field>
			<field name="model">ftp.connection</field>
			<field name="type">tree</field>
			<field name="priority" eval="5"/>
			<field name="arch" type="xml">
				<tree string="(S)FTP Connections">
					<field name="name" select="1"/>
                    <field name="server" select="1"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_ftp_connection">
			<field name="name">(S)FTP Connections</field>
			<field name="res_model">ftp.connection</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem id="menu_ftp_connection"
                  name="(S)FTP Connections"
                  parent="base.menu_config"
                  action="act_ftp_connection"
                  icon="STOCK_PROPERTIES"
                  sequence="100"/>

    </data>
</openerp>
