<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_picking_retry_availability_form" model="ir.ui.view">
             <field name="name">stock.picking.retry.availability.form</field>
             <field name="model">stock.picking.retry.availability</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Retry to assign packings after inventory">
                    <label nolabel="1" colspan="4" string="This wizard will check if packings are still available after an inventory."/>
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                         <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="action_retry_assign" string="Recompute packings availability" type="object" icon="gtk-execute"/>
                     </group>
                </form>
             </field>
         </record>

        <record id="action_stock_picking_retry_availability_form" model="ir.actions.act_window">
             <field name="name">Retry to assign packings after inventory</field>
             <field name="res_model">stock.picking.retry.availability</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="view_stock_picking_retry_availability_form"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>

        <menuitem
            icon="STOCK_EXECUTE"
            name="Retry to assign packings after inventory"
            action="action_stock_picking_retry_availability_form"
            id="menu_stock_picking_retry_availability"
            parent="stock.menu_stock_inventory_control"
            sequence="120"
            />

    </data>
</openerp>
