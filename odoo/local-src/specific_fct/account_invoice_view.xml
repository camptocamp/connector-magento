<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="invoice_supplier_form_inherit" model="ir.ui.view">
      <field name="name">account.invoice.supplier.inherit.form</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <data>
          <field name="date_due" position="attributes">
            <attribute name="required">True</attribute>
          </field>
          <field name="date_invoice" position="attributes">
            <attribute name="required">True</attribute>
          </field>
        </data>
      </field>
    </record>

    <!-- Add security group-->
    <menuitem id="account.menu_finance_payables"
      name="Suppliers"
      parent="account.menu_finance" sequence="3"
      groups="account.group_account_user,purchase.group_purchase_user"/>

    <record id="view_invoice_line_uos_tree" model="ir.ui.view">
      <field name="name">account.invoice.line.uos.tree</field>
      <field name="model">account.invoice.line</field>
      <field name="priority">30</field>
      <field name="arch" type="xml">
        <tree string="Invoice Line" editable="top">
          <field name="invoice_id" readonly="1"/>
          <field name="account_id" readonly="1" groups="account.group_account_user"/>
          <field name="name" readonly="1"/>
          <field name="product_id" readonly="1"/>
          <field name="quantity" readonly="1"/>
          <field name="uos_id" groups="product.group_uom"/>
          <field name="price_unit" readonly="1"/>
          <field name="discount" groups="sale.group_discount_per_so_line" readonly="1"/>
          <field name="price_subtotal" readonly="1"/>
          <field name="origin" readonly="1" invisible="1"/>
        </tree>
      </field>
    </record>

    <record id="view_account_invoice_line_filter" model="ir.ui.view">
      <field name="name">account.invoice.line.select</field>
      <field name="model">account.invoice.line</field>
      <field name="arch" type="xml">
        <search string="Search Invoice">
          <filter name="no_uos" string="No Unit of Measure" domain="[('uos_id', '=', False)]"/>
          <separator/>
          <field name="name"/>
          <field name="invoice_id"/>
          <field name="product_id"/>
          <field name="origin"/>
          <field name="account_id"/>
          <group expand="0" string="Group By...">
            <filter string="Unit of Measure" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by': 'uos_id'}"/>
            <filter string="Account" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by': 'account_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="action_invoice_line_uos_tree" model="ir.actions.act_window">
      <field name="name">Invoice Lines</field>
      <field name="res_model">account.invoice.line</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_invoice_line_uos_tree"/>
      <field name="domain" eval="[]"/>
      <field name="context" eval="{}"/>
    </record>

    <menuitem action="action_invoice_line_uos_tree" id="menu_invoice_line_uos_tree"
        parent="intrastat_base.menu_intrastat_base_root" groups="account.group_account_manager"/>
  </data>
</openerp>
