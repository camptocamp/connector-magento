<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="export_all_stock_view" model="ir.ui.view">
      <field name="name">Export All stocks to magento</field>
      <field name="model">stock.export.all.magento</field>
      <field name="arch" type="xml">
        <form string="Export stock values for all products to Magento" version="7.0">
        <div>
         <label string="This action will export stock values for all products to Magento, check the box to confirm "/>
        </div>
        <div>
          <field name="check_confirm"/>
        </div>
          <footer>
              <button name="action_manual_export" string="Create job"
                type="object"  default_focus="1" class="oe_highlight"/>
              or
              <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>


    <record id="action_export_all_stock" model="ir.actions.act_window">
      <field name="name">Export current stock of all products to Magento</field>
      <field name="res_model">stock.export.all.magento</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="export_all_stock_view"/>
      <field name="target">new</field>
    </record>

    <menuitem
        icon="STOCK_EXECUTE"
        name="Export stock values for all products to Magento"
        action="action_export_all_stock"
        id="menu_stock_values_export"
        parent="stock.next_id_61"
        sequence="110"
        />

  </data>
</openerp>
