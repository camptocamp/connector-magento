<odoo>

  <record id="view_magento_backend_form" model="ir.ui.view">
    <field name="name">magento.backend.form</field>
    <field name="model">magento.backend</field>
    <field name="inherit_id" ref="connector_magento.view_magento_backend_form"/>
    <field name="arch" type="xml">
      <xpath expr="/form/sheet/notebook/page[@name='import']" position="inside">
        <group>
          <label for="update_product_cost"
            string="Update all cost prices" class="oe_inline"/>
          <button name="update_product_cost"
            type="object"
            class="oe_highlight"
            string="Update"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
